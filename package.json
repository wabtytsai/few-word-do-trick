{
  "name": "@wabtytsai/few-word-do-trick",
  "version": "1.0.0",
  "description": "a game where you use as few words as you can",
  "repository": "git@github.com:wabtytsai/few-word-do-trick.git",
  "author": "Edward Tsai <edward.tsai.0091+github@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "workspaces/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel start:dev:client start:dev:server",
    "start:dev:client": "yarn workspace @few-word-do-trick/client dev",
    "start:dev:server": "yarn workspace @few-word-do-trick/server start:dev",
    "build:client": "yarn workspace @few-word-do-trick/client build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
